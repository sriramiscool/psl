<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.linqs</groupId>
    <artifactId>psl-python</artifactId>
    <name>psl-python</name>
    <packaging>pom</packaging>
    <description>The Python inferface to the PSL software.</description>

    <parent>
        <groupId>org.linqs</groupId>
        <artifactId>psl</artifactId>
        <version>2.2.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.linqs</groupId>
            <artifactId>psl-cli</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <!-- Cleanup all the python build artifacts -->
                    <execution>
                        <id>python-clean</id>
                        <phase>clean</phase>
                        <configuration>
                            <executable>.build/clean.sh</executable>
                            <workingDirectory>.</workingDirectory>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>

                    <!-- Package into a binary wheel -->
                    <execution>
                        <id>python-package</id>
                        <phase>package</phase>
                        <configuration>
                            <executable>.build/package.sh</executable>
                            <workingDirectory>.</workingDirectory>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>

                    <!-- Install the binary wheel -->
                    <execution>
                        <id>python-install</id>
                        <phase>install</phase>
                        <configuration>
                            <executable>.build/install.sh</executable>
                            <workingDirectory>.</workingDirectory>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>

                    <!-- Run all the tests -->
                    <!-- These are actually integration tests since they rely on the packaging. -->
                    <execution>
                        <id>python-test</id>
                        <phase>integration-test</phase>
                        <configuration>
                            <skip>${maven.test.skip}</skip>
                            <executable>python3</executable>
                            <workingDirectory>.</workingDirectory>
                            <arguments>
                                <argument>run_tests.py</argument>
                            </arguments>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>

                    <!-- Deploy the package to test PyPI -->
                    <execution>
                        <id>python-deploy</id>
                        <phase>deploy</phase>
                        <configuration>
                            <executable>.build/deploy.sh</executable>
                            <workingDirectory>.</workingDirectory>
                            <arguments>
                                <argument>test</argument>
                            </arguments>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <!-- Disable the deploy plugin for this project. -->
                <!-- Instead, we will inject specific steps into the deploy phase. -->
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>central-release</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <!-- Deploy the package to PyPI -->
                            <execution>
                                <id>python-deploy</id>
                                <phase>deploy</phase>
                                <configuration>
                                    <executable>.build/deploy.sh</executable>
                                    <workingDirectory>.</workingDirectory>
                                    <arguments>
                                        <argument>release</argument>
                                    </arguments>
                                </configuration>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>

                <pluginManagement>
                    <plugins>
                        <!-- Disable the deploy plugin for this project. -->
                        <!-- Instead, we will inject specific steps into the deploy phase. -->
                        <plugin>
                            <artifactId>maven-deploy-plugin</artifactId>
                            <configuration>
                                <skip>true</skip>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
    </profiles>

</project>
